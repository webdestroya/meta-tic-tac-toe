<header>

  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">Meta Tic-Tac-Toe</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><%= link_to 'New Game', new_game_path %></li>
            </ul>

            <ul class="nav pull-right">
              <li><%= link_to 'Bugs', 'https://github.com/webdestroya/meta-tic-tac-toe/issues' %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

</header>

<div class="container-fluid" id="content">

  <div class="container">

  <% if content_for?(:page_heading) || content_for?(:title) %>
  <div class="page-header"><h1>
    <% if content_for?(:page_heading) %>
      <%= yield :page_heading %>
    <% elsif content_for?(:title) %>
      <%= yield :title %>
    <% end %>
  </h1></div>
  <% end %>
    
  <%= yield %>

  </div>

</div>

<div class="clear"></div>

<footer>
  <div class="container">
  <aside>&nbsp;</aside>
  <div class="noprint row-fluid">
    <div class="span12" style="text-align:center;">
      UCI Scheduler by <a href="http://www.mitchdempsey.com/?utm_source=ucischeduler&utm_medium=website&utm_campaign=footer">Mitch Dempsey</a>
    </div>
  </div>
</div>
</footer>




