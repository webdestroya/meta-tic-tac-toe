<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= content_for?(:title) ? yield(:title) : "Home" %> | Meta Tic-Tac-Toe</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= yield :before_scripts %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <%= yield :extra_scripts %>

</head>
<body id="pagebody">
