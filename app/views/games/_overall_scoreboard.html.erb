<% overall_pos = 0 %>
<table class="table table-bordered table-condensed overall-board">
  <tbody>
  <% 3.times do |row| %>
  <tr>
    <% 3.times do |col| %>
    <td 
      width="33%"
      data-row="<%= row %>"
      data-col="<%= col %>"
      data-pos="<%= overall_pos %>"
      >
      &nbsp;
    </td>
    <% overall_pos = overall_pos + 1 %>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>